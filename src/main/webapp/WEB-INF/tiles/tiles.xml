<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
		"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
		"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- admin -->
	<definition name="admin-layout" template="/WEB-INF/views/layout/layout_admin.jsp">
		<put-attribute name="navbar" value="/WEB-INF/views/layout/navbar_admin.jsp" />
		<put-attribute name="sidebarMenu" value="/WEB-INF/views/layout/sidebarMenu_admin.jsp" />
		<put-attribute name="body" value="" />
	</definition>
	<definition name="admin/*" extends="admin-layout">
		<put-attribute name="body" value="/WEB-INF/views/admin/{1}.jsp" />
	</definition>

	<!-- user -->
	<definition name="user-layout" template="/WEB-INF/views/layout/layout_user.jsp">
		<put-attribute name="navbar" value="/WEB-INF/views/layout/navbar_user.jsp" />
		<put-attribute name="body" value="" />
	</definition>
	<definition name="user/*" extends="user-layout">
		<put-attribute name="body" value="/WEB-INF/views/board/{1}.jsp" />
	</definition>
	<definition name="user/*" extends="user-layout">
		<put-attribute name="body" value="/WEB-INF/views/member/{1}.jsp" />
	</definition>
	<definition name="user/*" extends="user-layout">
		<put-attribute name="body" value="/WEB-INF/views/routine/{1}.jsp" />
	</definition>

</tiles-definitions>